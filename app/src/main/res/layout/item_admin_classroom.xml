<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.ClassBuddy.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/spacing_sm"
    android:layout_marginVertical="@dimen/spacing_xs"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/card_padding">

        <!-- Avatar with Initial -->
        <FrameLayout
            android:id="@+id/avatarContainer"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvInitial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/text_on_primary"
                android:textSize="@dimen/text_size_xl"
                android:textStyle="bold"
                tools:text="C" />

        </FrameLayout>

        <!-- Class Name -->
        <TextView
            android:id="@+id/tvClassName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_lg"
            android:textStyle="bold"
            tools:text="CSE 3101 - Data Structures"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/avatarContainer"
            app:layout_constraintTop_toTopOf="@+id/avatarContainer" />

        <!-- Section & Department -->
        <TextView
            android:id="@+id/tvSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_sm"
            tools:text="Section A â€¢ CSE"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/avatarContainer"
            app:layout_constraintTop_toBottomOf="@+id/tvClassName" />

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avatarContainer" />

        <!-- Classroom Code -->
        <TextView
            android:id="@+id/tvCode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:padding="8dp"
            android:background="@drawable/bg_code_container"
            android:textColor="@color/primary"
            android:textSize="@dimen/text_size_sm"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider"
            tools:text="Code: ABC-123" />

        <!-- Student Icon -->
        <ImageView
            android:id="@+id/ivStudents"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/ic_students"
            android:contentDescription="Students"
            app:tint="@color/text_hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <!-- Student Count -->
        <TextView
            android:id="@+id/tvStudentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_sm"
            tools:text="25 students"
            app:layout_constraintBottom_toBottomOf="@+id/ivStudents"
            app:layout_constraintStart_toEndOf="@+id/ivStudents"
            app:layout_constraintTop_toTopOf="@+id/ivStudents" />

        <!-- Admin Name -->
        <TextView
            android:id="@+id/tvAdminName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_hint"
            android:textSize="@dimen/text_size_xs"
            tools:text="Managed by John Doe"
            app:layout_constraintBottom_toBottomOf="@+id/ivStudents"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivStudents" />

        <!-- Actions Row 1 (Copy, Share) -->
        <LinearLayout
            android:id="@+id/actionsRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:spacing="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAdminName">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCopy"
                style="@style/Widget.ClassBuddy.Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_xs"
                android:paddingHorizontal="8dp"
                android:paddingVertical="6dp"
                android:text="@string/copy"
                app:iconGravity="textStart"
                app:iconSize="16dp"
                app:icon="@drawable/ic_copy" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShare"
                style="@style/Widget.ClassBuddy.Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:textSize="@dimen/text_size_xs"
                android:paddingHorizontal="8dp"
                android:paddingVertical="6dp"
                android:text="@string/share"
                app:iconGravity="textStart"
                app:iconSize="16dp"
                app:icon="@drawable/ic_share" />
        </LinearLayout>

        <!-- Actions Row 2 (View Students, Delete) -->
        <LinearLayout
            android:id="@+id/actionsRow2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:spacing="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/actionsRow">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewStudents"
                style="@style/Widget.ClassBuddy.Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_xs"
                android:paddingHorizontal="8dp"
                android:paddingVertical="6dp"
                android:text="@string/view_students"
                app:iconGravity="textStart"
                app:iconSize="16dp"
                app:icon="@drawable/ic_students" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                style="@style/Widget.ClassBuddy.Button.Outlined"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:textSize="@dimen/text_size_xs"
                android:paddingHorizontal="8dp"
                android:paddingVertical="6dp"
                android:text="@string/delete"
                app:iconGravity="textStart"
                app:iconSize="16dp"
                app:icon="@drawable/ic_delete" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
