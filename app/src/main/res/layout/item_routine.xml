<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.ClassBuddy.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/spacing_xs"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Time Column -->
        <LinearLayout
            android:id="@+id/timeContainer"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:background="@color/primary"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_on_primary"
                android:textSize="@dimen/text_size_md"
                android:textStyle="bold"
                tools:text="09:00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="to"
                android:textColor="@color/text_on_primary"
                android:textSize="@dimen/text_size_xs"
                android:alpha="0.8" />

            <TextView
                android:id="@+id/tvEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_on_primary"
                android:textSize="@dimen/text_size_md"
                android:textStyle="bold"
                tools:text="10:00" />

        </LinearLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/timeContainer"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Subject -->
            <TextView
                android:id="@+id/tvSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_size_md"
                android:textStyle="bold"
                tools:text="Data Structures and Algorithms" />

            <!-- Class Info Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <!-- Type Chip -->
                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_chip_primary"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_size_xs"
                    android:textStyle="bold"
                    tools:text="LECTURE" />

                <!-- Classroom Name -->
                <TextView
                    android:id="@+id/tvClassroomName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/text_hint"
                    android:textSize="@dimen/text_size_xs"
                    tools:text="CSE 3101" />

            </LinearLayout>

            <!-- Faculty -->
            <TextView
                android:id="@+id/tvFaculty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_sm"
                app:drawableTint="@color/text_hint"
                tools:text="Dr. John Smith" />

            <!-- Room -->
            <TextView
                android:id="@+id/tvRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:drawableStart="@drawable/ic_room"
                android:drawablePadding="4dp"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_sm"
                app:drawableTint="@color/text_hint"
                tools:text="Room 301" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
