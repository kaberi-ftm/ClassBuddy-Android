<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base Application Theme -->
    <style name="Theme.ClassBuddy" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/text_on_secondary</item>

        <!-- Background & Surface -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorOnBackground">@color/text_primary</item>

        <!-- Error -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/surface</item>

        <!-- Default Widget Styles -->
        <item name="materialButtonStyle">@style/Widget.ClassBuddy.Button.Primary</item>
        <item name="textInputStyle">@style/Widget.ClassBuddy.TextInputLayout</item>
        <item name="materialCardViewStyle">@style/Widget.ClassBuddy.Card</item>
        <item name="bottomNavigationStyle">@style/Widget.ClassBuddy.BottomNavigation</item>
    </style>

    <!-- Splash Theme -->
    <style name="Theme.ClassBuddy.Splash" parent="Theme.ClassBuddy">
        <item name="android:windowBackground">@color/primary</item>
        <item name="android:statusBarColor">@color/primary</item>
    </style>

    <!-- Auth Theme (Login/Register) -->
    <style name="Theme.ClassBuddy.Auth" parent="Theme.ClassBuddy">
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!-- Fullscreen Theme -->
    <style name="Theme.ClassBuddy.Fullscreen" parent="Theme.ClassBuddy">
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>