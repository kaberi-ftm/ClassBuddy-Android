<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ==================== BUTTONS ==================== -->

    <!-- Primary Button -->
    <style name="Widget.ClassBuddy.Button.Primary" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:paddingStart">@dimen/button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_padding_horizontal</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="rippleColor">@color/ripple_dark</item>
    </style>

    <!-- Secondary Button -->
    <style name="Widget.ClassBuddy.Button.Secondary" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/text_on_secondary</item>
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/secondary</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
    </style>

    <!-- Outlined Button -->
    <style name="Widget.ClassBuddy.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:minHeight">@dimen/button_height</item>
        <item name="rippleColor">@color/ripple_light</item>
    </style>

    <!-- Text Button -->
    <style name="Widget.ClassBuddy.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/ripple_light</item>
    </style>

    <!-- ==================== TEXT INPUT ==================== -->

    <!-- Text Input Layout -->
    <style name="Widget.ClassBuddy.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/input_corner_radius</item>
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="errorTextColor">@color/error</item>
        <item name="errorIconTint">@color/error</item>
        <item name="endIconTint">@color/text_hint</item>
        <item name="startIconTint">@color/text_hint</item>
    </style>

    <!-- Text Input Layout - Filled -->
    <style name="Widget.ClassBuddy.TextInputLayout.Filled" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusTopStart">@dimen/input_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/input_corner_radius</item>
        <item name="boxBackgroundColor">@color/surface</item>
        <item name="hintTextColor">@color/primary</item>
    </style>

    <!-- ==================== CARDS ==================== -->

    <!-- Card -->
    <style name="Widget.ClassBuddy.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="contentPadding">0dp</item>
    </style>

    <!-- Outlined Card -->
    <style name="Widget.ClassBuddy.Card.Outlined" parent="Widget.Material3.CardView.Outlined">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="strokeColor">@color/divider</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- ==================== TOOLBAR ==================== -->

    <!-- Toolbar -->
    <style name="Widget.ClassBuddy.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/text_on_primary</item>
        <item name="subtitleTextColor">@color/text_on_primary</item>
        <item name="navigationIconTint">@color/text_on_primary</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
    </style>

    <!-- Transparent Toolbar -->
    <style name="Widget.ClassBuddy.Toolbar.Transparent" parent="Widget.ClassBuddy.Toolbar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- ==================== BOTTOM NAVIGATION ==================== -->

    <!-- Bottom Navigation -->
    <style name="Widget.ClassBuddy.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/surface</item>
        <item name="itemIconTint">@color/bottom_nav_item_color</item>
        <item name="itemTextColor">@color/bottom_nav_item_color</item>
        <item name="itemActiveIndicatorStyle">@style/Widget.ClassBuddy.BottomNavigation.ActiveIndicator</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:elevation">8dp</item>
    </style>

    <style name="Widget.ClassBuddy.BottomNavigation.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary_light</item>
    </style>

    <!-- ==================== FAB ==================== -->

    <!-- FAB -->
    <style name="Widget.ClassBuddy.FAB" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/secondary</item>
        <item name="tint">@color/text_on_secondary</item>
        <item name="elevation">6dp</item>
    </style>

    <!-- Mini FAB -->
    <style name="Widget.ClassBuddy.FAB.Mini" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="fabSize">mini</item>
        <item name="backgroundTint">@color/secondary</item>
        <item name="tint">@color/text_on_secondary</item>
    </style>

    <!-- ==================== CHIP ==================== -->

    <!-- Chip -->
    <style name="Widget.ClassBuddy.Chip" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@color/primary_light</item>
        <item name="android:textColor">@color/primary</item>
        <item name="chipCornerRadius">16dp</item>
    </style>

    <!-- ==================== SWITCH ==================== -->

    <!-- Switch -->
    <style name="Widget.ClassBuddy.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>
    </style>

    <!-- ==================== TEXT STYLES ==================== -->

    <!-- Headline Large -->
    <style name="TextAppearance.ClassBuddy.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_xxxl</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Headline Medium -->
    <style name="TextAppearance.ClassBuddy.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_xxl</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Title Large -->
    <style name="TextAppearance.ClassBuddy.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_xl</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Title Medium -->
    <style name="TextAppearance.ClassBuddy.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_lg</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Body Large -->
    <style name="TextAppearance.ClassBuddy.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_lg</item>
    </style>

    <!-- Body Medium -->
    <style name="TextAppearance.ClassBuddy.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/text_size_md</item>
    </style>

    <!-- Label -->
    <style name="TextAppearance.ClassBuddy.Label" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:textSize">@dimen/text_size_sm</item>
    </style>

</resources>